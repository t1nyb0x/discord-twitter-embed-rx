# ===========================
# TwitterRX 設定ファイル
# ===========================

# Discordに添付するメディアファイルの上限サイズ (バイト単位)
# デフォルト: 5242800 (5MB)
media_max_file_size: 5242800

# ログ設定
logging:
  # ログファイルの保持期間
  # 例: "14d" (14日間), "30d" (30日間), "7d" (7日間)
  maxFiles: "14d"
  
  # ログファイルの最大サイズ
  # 例: "20m" (20MB), "50m" (50MB), "100m" (100MB)
  maxSize: "20m"
  
  # ログレベル (debug, info, warn, error)
  # 注意: 環境変数 LOG_LEVEL が設定されている場合、そちらが優先されます
  # - debug: すべてのログを出力 (開発環境推奨)
  # - info: 情報・警告・エラーを出力 (本番環境推奨)
  # - warn: 警告とエラーのみ出力
  # - error: エラーのみ出力
  logLevel: "info"
  
  # エラーログを別ファイルに分離するか
  # true: error-%DATE%.log に分離
  # false: すべてのログを app-%DATE%.log に出力
  separateErrorLog: true

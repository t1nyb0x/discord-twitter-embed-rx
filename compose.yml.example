services:
  twitter-rx:
    container_name: TwitterEmbedRX
    image: ghcr.io/t1nyb0x/discord-twitter-embed-rx:${IMAGE_TAG:-latest}
    restart: always
    env_file:
      - .env
    volumes:
      - ./logs:/app/logs  # ログファイルの永続化
  redis:
    container_name: Redis
    image: redis:8.2.2-alpine
    restart: always
    ports:
      - "6379:6379"
    volumes:
      - redis_data:/data

volumes:
  redis_data: